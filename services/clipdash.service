[Unit]
Description=ClipDash Bot (Uvicorn)
After=network.target

[Service]
User=clipdash
Group=clipdash
WorkingDirectory=/home/clipdash/ClipDash.in
Environment="PATH=/home/clipdash/ClipDash.in/venv/bin:/usr/local/bin:/usr/bin"
ExecStart=/home/clipdash/ClipDash.in/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
